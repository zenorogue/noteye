  elseif ch == ("+") then return rec(Trident)
  elseif ch == ("^") then return rec(bgo(Erado,Pickaxe,Pickaxe))
  elseif ch == ("r") then return rec(Erado)
  elseif ch == ("y") then return rec(Pickaxe)
