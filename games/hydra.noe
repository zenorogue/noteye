function alnumav(cc)
  if cc>=av("1") and cc <= av("9") then 
    return cc - av("0")
  elseif cc >= av("A") and cc <= av("Z") then 
    return cc - av("A") + 10
  elseif cc == av("0") then
    return 10 -- only possible in the hex mode
  else
    return 0
    end
  end

function alnum(c)
  return alnumav(av(c))
  end

