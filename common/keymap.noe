function sendvector(v)
  local maxmoves = 500
  while maxmoves > 0 and (v.x ~= 0 or v.y ~= 0) do
    maxmoves = maxmoves - 1
    d = vectodir(v, 0)
    -- print("v relative: "..tostring(v).." d="..d)
    if d and d ~= -1 then
      nsendkey2(dirkeys[d], evKeyBothText)
      -- sendrotated(ev)
      v = v - dirtovec[d]
      end
    end
  end

