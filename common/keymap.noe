-- facing, for the FPP display

facedir = 0

-- change face by 'd'
function changeface(d, type)
  ofd = facedir
  if gamefourdir or (gamehexdir and ((ofd+d) % 4 ==2)) then 
    d = 2*d
    end
  
  if type == evKeyDown or type == evKeyDownText or type == evKeyBoth or type == evKeyBothText then
    facedir = ofd + d
    setfacedir(facedir)
    end
  end

